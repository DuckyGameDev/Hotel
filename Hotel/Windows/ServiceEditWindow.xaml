<Window x:Class="Hotel.Windows.ServiceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Windows"
        mc:Ignorable="d"
        Title="Редактирование услуги" 
        Height="300" Width="400">
    <StackPanel Margin="15">
        <TextBlock Text="Название услуги:"/>
        <TextBox Text="{Binding CurrentService.ServiceName, UpdateSourceTrigger=PropertyChanged}" 
                Margin="0 5 0 10"/>

        <TextBlock Text="Тип услуги:"/>
        <ComboBox ItemsSource="{Binding ServiceTypes}"
                 SelectedItem="{Binding CurrentService.ServiceType}"
                 Margin="0 5 0 10"/>

        <TextBlock Text="Цена:"/>
        <TextBox Text="{Binding CurrentService.Price, UpdateSourceTrigger=PropertyChanged}" 
                Margin="0 5 0 20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="100" Margin="0 0 10 0" Click="Save_Click"/>
            <Button Content="Отмена" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>