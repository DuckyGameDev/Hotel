<Window x:Class="Hotel.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Windows"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="800">
    <Grid Background="#FFF0F5FF">
        <Border Background="White" 
                CornerRadius="5"
                Width="320"
                Padding="20"
                VerticalAlignment="Center">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Вход в систему" 
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"
                           Foreground="#FF4A6FAE"/>

                <!-- Поле логина -->
                <TextBlock Text="Логин:" Margin="0 5 0 0" Foreground="#555"/>
                <TextBox x:Name="UsernameBox" 
                         Height="30"
                         Padding="5"
                         Margin="0 5 0 10"/>

                <!-- Поле пароля -->
                <TextBlock Text="Пароль:" Margin="0 5 0 0" Foreground="#555"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="30"
                             Padding="5"
                             Margin="0 5 0 20"/>

                <!-- Кнопки -->
                <Button  IsDefault="True"
                    Content="Войти" 
                        Click="LoginButton_Click"
                        Background="#FF4A6FAE"
                        Foreground="White"
                        Height="30"
                        FontWeight="Bold"/>

                <Button Content="Зарегистрироваться" 
                        Click="RegisterButton_Click"
                        Style="{StaticResource LinkButtonStyle}"
                        Foreground="#FF4A6FAE"
                        Margin="0 10 0 0"
                        BorderThickness="0"
                        Background="Transparent"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
