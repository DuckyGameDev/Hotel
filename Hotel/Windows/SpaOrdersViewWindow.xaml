<Window x:Class="Hotel.Windows.SpaOrdersViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Windows"
        xmlns:converters="clr-namespace:Hotel.Converters"
        mc:Ignorable="d"
        Title="Мои SPA-заказы" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:TimeOnlyToStringConverter x:Key="TimeConverter"/>
        <converters:DateOnlyToStringConverter x:Key="DateConverter"/>
        <converters:PriceToStringConverter x:Key="PriceConverter"/>
    </Window.Resources>

    <Grid Background="#FFF0F5FF">
        <DockPanel>
            <!-- Шапка с кнопкой возврата -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" 
                       Background="#FF4A6FAE" Height="50">
                <Button Content="Назад" 
                        Width="100" 
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Margin="10 0 0 0"
                        Click="BackButton_Click"/>
                <TextBlock Text="Мои SPA-заказы" 
                          Foreground="White"
                          VerticalAlignment="Center"
                          FontSize="16"
                          FontWeight="Bold"
                          Margin="20 0 0 0"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <StackPanel Margin="20">
                <TextBlock Text="Мои SPA-процедуры" 
                          FontSize="14"
                          Margin="0 0 0 10"/>
                <TextBlock Text="Здесь вы можете просмотреть все ваши SPA-процедуры" 
                          Foreground="#555"
                          Margin="0 0 0 20"/>

                <!-- Список заказов -->
                <ListView Name="SpaOrdersListView" 
                         Background="White"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.View>
                        <GridView>
                            <!-- Название услуги -->
                            <GridViewColumn Header="Услуга" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SpaService.ServiceName}" 
                                                  FontWeight="Bold"
                                                  Foreground="#FF4A6FAE"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Дата -->
                            <GridViewColumn Header="Дата" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ServiceDate, Converter={StaticResource DateConverter}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Время -->
                            <GridViewColumn Header="Время" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ServiceTime, Converter={StaticResource TimeConverter}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Цена -->
                            <GridViewColumn Header="Цена" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SpaService.Price, Converter={StaticResource PriceConverter}}" 
                                                  Foreground="#FF4A6FAE"
                                                  FontWeight="Bold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Длительность -->
                            <GridViewColumn Header="Длительность" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding SpaService.Duration}"/>
                                            <TextBlock Text=" мин" Margin="2 0 0 0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="0 0 0 10"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#EEE"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Панель кнопок -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0 20 0 0">
                    <Button Content="Отменить" 
                           Width="120" 
                           Margin="0 0 10 0" 
                           Click="CancelOrder_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"/>

                    <Button Content="Перенести" 
                           Width="120" 
                           Click="RescheduleOrder_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>