<Window x:Class="Hotel.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Windows"
        mc:Ignorable="d"
        Title="Регистрация" Height="550" Width="800">
    <Grid Background="#FFF0F5FF" Margin="0,0,-150,-296">
        <Border Background="White" 
                CornerRadius="5"
                Width="320"
                Padding="20"
                VerticalAlignment="Center">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Регистрация" 
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"
                           Foreground="#FF4A6FAE"/>

                <!-- Поле логина -->
                <TextBlock Text="Логин:" Margin="0 5 0 0" Foreground="#555"/>
                <TextBox x:Name="LoginBox" 
                         Height="30"
                         Padding="5"
                         Margin="0 5 0 10"/>

                <!-- Поле пароля -->
                <TextBlock Text="Пароль:" Margin="0 5 0 0" Foreground="#555"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="30"
                             Padding="5"
                             Margin="0 5 0 10"/>

                <!-- Подтверждение пароля -->
                <TextBlock Text="Подтвердите пароль:" Margin="0 5 0 0" Foreground="#555"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Height="30"
                             Padding="5"
                             Margin="0 5 0 10"/>

                <!-- Полное имя -->
                <TextBlock Text="ФИО:" Margin="0 5 0 0" Foreground="#555"/>
                <TextBox x:Name="FullNameBox" 
                         Height="30"
                         Padding="5"
                         Margin="0 5 0 10"/>

                <!-- Паспортные данные -->
                <TextBlock Text="Паспортные данные:" Margin="0 5 0 0" Foreground="#555"/>
                <TextBox x:Name="PassportBox" 
                         Height="30"
                         Padding="5"
                         Margin="0 5 0 10"/>

                <!-- Контактный телефон -->
                <TextBlock Text="Контактный телефон:" Margin="0 5 0 0" Foreground="#555"/>
                <TextBox x:Name="PhoneBox" 
                         Height="30"
                         Padding="5"
                         Margin="0 5 0 10"/>

                <!-- Email (необязательно) -->
                <TextBlock Text="Email (необязательно):" Margin="0 5 0 0" Foreground="#555"/>
                <TextBox x:Name="EmailBox" 
                         Height="30"
                         Padding="5"
                         Margin="0 5 0 20"/>

                <!-- Кнопка регистрации -->
                <Button Content="Зарегистрироваться" 
                        Click="RegisterButton_Click"
                        Background="#FF4A6FAE"
                        Foreground="White"
                        Height="30"
                        FontWeight="Bold"/>

                <!-- Кнопка возврата к авторизации -->
                <Button Content="Назад к авторизации" 
                        Click="BackToLoginButton_Click"
                        Style="{StaticResource LinkButtonStyle}"
                        Foreground="#FF4A6FAE"
                        Margin="0 10 0 0"
                        BorderThickness="0"
                        Background="Transparent"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>