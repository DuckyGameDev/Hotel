<Window x:Class="Hotel.Windows.ServicesManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Windows"
        xmlns:converters="clr-namespace:Hotel.Converters"
        mc:Ignorable="d"
        Title="Управление услугами" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FFF0F5FF">
        <!-- Шапка с кнопкой возврата -->
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" 
                       Background="#FF4A6FAE" Height="50">
                <Button Content="Назад" 
                        Width="100" 
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Margin="10 0 0 0"
                        Click="BackButton_Click"/>
                <TextBlock Text="Управление услугами" 
                          Foreground="White"
                          VerticalAlignment="Center"
                          FontSize="16"
                          FontWeight="Bold"
                          Margin="20 0 0 0"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <StackPanel Margin="20">
                <TextBlock Text="Список всех услуг отеля" 
                          FontSize="14"
                          Margin="0 0 0 10"/>
                <TextBlock Text="Добавляйте, редактируйте и удаляйте услуги" 
                          Foreground="#555"
                          Margin="0 0 0 20"/>

                <!-- Список услуг -->
                <ListView Name="ServicesListView" 
                         Background="White"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.View>
                        <GridView>
                            <!-- Скрытые столбцы для ID -->
                            <GridViewColumn Width="0" DisplayMemberBinding="{Binding ServiceId}"/>

                            <!-- Название услуги -->
                            <GridViewColumn Header="Название" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ServiceName}" 
                                                  FontWeight="Bold"
                                                  Foreground="#FF4A6FAE"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Тип услуги -->
                            <GridViewColumn Header="Тип" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFE3F2FD"
                                               CornerRadius="3"
                                               Padding="5 2"
                                               HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding ServiceType}" 
                                                      Foreground="#0D47A1"
                                                      FontWeight="Bold"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Цена -->
                            <GridViewColumn Header="Цена" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" 
                                                  Foreground="#FF4A6FAE"
                                                  FontWeight="Bold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Количество заказов -->
                            <GridViewColumn Header="Заказов" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Serviceorders.Count}" 
                                                  HorizontalAlignment="Center"
                                                  FontWeight="Bold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="0 0 0 10"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#EEE"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Панель кнопок -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0 20 0 0">
                    <Button Content="Добавить" 
                           Width="120" 
                           Margin="0 0 10 0" 
                           Click="AddService_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"/>

                    <Button Content="Редактировать" 
                           Width="120" 
                           Margin="0 0 10 0" 
                           Click="EditService_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"/>

                    <Button Content="Удалить" 
                           Width="120" 
                           Margin="0 0 10 0" 
                           Click="DeleteService_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
