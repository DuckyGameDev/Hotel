<Window x:Class="Hotel.Windows.ServiceOrderManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Windows"
        mc:Ignorable="d"
        Title="Управление заказами услуг" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF0F5FF">
        <DockPanel>
            <!-- Шапка -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" 
                       Background="#FF4A6FAE" Height="50">
                <Button Content="Назад" 
                        Width="100" 
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Margin="10 0 0 0"
                        Click="BackButton_Click"/>
                <TextBlock Text="Управление заказами услуг" 
                          Foreground="White"
                          VerticalAlignment="Center"
                          FontSize="16"
                          FontWeight="Bold"
                          Margin="20 0 0 0"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <Grid DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Верхняя часть - информация о заказе -->
                <GroupBox Grid.Row="0" Header="Информация о заказе" Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Бронирование:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                        <ComboBox x:Name="BookingComboBox" Grid.Row="0" Grid.Column="1" Margin="5"
                                 DisplayMemberPath="BookingId"/>

                        <TextBlock Text="Услуга:" Grid.Row="0" Grid.Column="2" Margin="5"/>
                        <ComboBox x:Name="ServiceComboBox" Grid.Row="0" Grid.Column="3" Margin="5"
                                 DisplayMemberPath="ServiceName"/>

                        <TextBlock Text="Дата:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                        <DatePicker x:Name="ServiceDatePicker" Grid.Row="1" Grid.Column="1" Margin="5"/>

                        <TextBlock Text="Время:" Grid.Row="1" Grid.Column="2" Margin="5"/>
                        <TextBox x:Name="ServiceTimeTextBox" Grid.Row="1" Grid.Column="3" Margin="5"
                               Text="12:00"/>

                        <StackPanel Grid.Row="2" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                            <Button x:Name="AddButton" Content="Добавить" Width="100" Margin="5" Click="AddButton_Click"/>
                            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click"/>
                            <Button x:Name="CancelButton" Content="Отмена" Width="100" Margin="5" Click="CancelButton_Click"/>
                            <Button x:Name="DeleteButton" Content="Удалить" Width="100" Margin="5" Background="#FFD32F2F" Foreground="White" Click="DeleteButton_Click"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Нижняя часть - список заказов -->
                <GroupBox Grid.Row="1" Header="Список заказов" Margin="10">
                    <DockPanel>
                        <TextBox x:Name="SearchTextBox" DockPanel.Dock="Top" Margin="0 0 0 10" 
                                 TextChanged="SearchTextBox_TextChanged"/>

                        <DataGrid x:Name="ServiceOrdersDataGrid" 
                                 AutoGenerateColumns="False"
                                 SelectionMode="Single"
                                 SelectionChanged="ServiceOrdersDataGrid_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="Auto" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Бронирование" Binding="{Binding BookingId}" Width="100"/>
                                <DataGridTextColumn Header="Гость" Binding="{Binding Booking.Guest.FullName}" Width="*"/>
                                <DataGridTextColumn Header="Услуга" Binding="{Binding Service.ServiceName}" Width="150"/>
                                <DataGridTextColumn Header="Цена" Binding="{Binding Service.Price}" Width="80"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding ServiceDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="Время" Binding="{Binding ServiceTime}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>
            </Grid>
        </DockPanel>
    </Grid>
</Window>