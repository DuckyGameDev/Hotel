<Window x:Class="Hotel.Windows.SpaServicesManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Управление SPA-услугами" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF0F5FF">
        <DockPanel>
            <!-- Шапка с заголовком -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" 
                       Background="#FF4A6FAE" Height="50">
                <Button Content="Назад" 
                        Width="100" 
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Margin="10 0 0 0"
                        Click="BackButton_Click"/>
                <TextBlock Text="Управление SPA-услугами" 
                          Foreground="White"
                          VerticalAlignment="Center"
                          FontSize="16"
                          FontWeight="Bold"
                          Margin="20 0 0 0"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <StackPanel Margin="20">
                <TextBlock Text="Список всех SPA-услуг" 
                          FontSize="14"
                          Margin="0 0 0 10"/>
                <TextBlock Text="Добавляйте, редактируйте и удаляйте SPA-услуги" 
                          Foreground="#555"
                          Margin="0 0 0 20"/>

                <!-- Список SPA-услуг -->
                <ListView Name="SpaServicesListView" 
                         Background="White"
                         BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <!-- Скрытые столбцы -->
                            <GridViewColumn Width="0" DisplayMemberBinding="{Binding SpaServiceId}"/>

                            <!-- Название услуги -->
                            <GridViewColumn Header="Название" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ServiceName}" 
                                                  FontWeight="Bold"
                                                  Foreground="#FF4A6FAE"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Описание -->
                            <GridViewColumn Header="Описание" Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Description}" 
                                                  TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Цена -->
                            <GridViewColumn Header="Цена" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" 
                                                  Foreground="#FF4A6FAE"
                                                  FontWeight="Bold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Длительность -->
                            <GridViewColumn Header="Длительность (мин)" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Duration}" 
                                                  HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="0 0 0 10"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#EEE"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Панель управления -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0 20 0 0">
                    <Button Content="Добавить" 
                           Width="120" 
                           Margin="0 0 10 0"
                           Click="AddSpaService_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"/>

                    <Button Content="Редактировать" 
                           Width="120" 
                           Margin="0 0 10 0"
                           Click="EditSpaService_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"/>

                    <Button Content="Удалить" 
                           Width="120"
                           Click="DeleteSpaService_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>