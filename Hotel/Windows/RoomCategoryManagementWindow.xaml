<Window x:Class="Hotel.Windows.RoomCategoryManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Windows"
        mc:Ignorable="d"
        Title="Управление категориями номеров" 
        Height="550" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF0F5FF">
        <DockPanel>
            <!-- Шапка -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" 
                       Background="#FF4A6FAE" Height="50">
                <Button Content="Назад" 
                        Width="100" 
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Margin="10 0 0 0"
                        Click="BackButton_Click"/>
                <TextBlock Text="Управление категориями номеров" 
                          Foreground="White"
                          VerticalAlignment="Center"
                          FontSize="16"
                          FontWeight="Bold"
                          Margin="20 0 0 0"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <Grid DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Верхняя часть - информация о категории -->
                <GroupBox Grid.Row="0" Header="Информация о категории" Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                        <TextBox x:Name="CategoryNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                        <TextBlock Text="Цена за ночь:" Grid.Row="0" Grid.Column="2" Margin="5"/>
                        <TextBox x:Name="PriceTextBox" Grid.Row="0" Grid.Column="3" Margin="5"/>

                        <TextBlock Text="Описание:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                        <TextBox x:Name="DescriptionTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" 
                                 Margin="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <StackPanel Grid.Row="2" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                            <Button x:Name="AddButton" Content="Добавить" Width="100" Margin="5" Click="AddButton_Click"/>
                            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click"/>
                            <Button x:Name="CancelButton" Content="Отмена" Width="100" Margin="5" Click="CancelButton_Click"/>
                            <Button x:Name="DeleteButton" Content="Удалить" Width="100" Margin="5" Background="#FFD32F2F" Foreground="White" Click="DeleteButton_Click"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Нижняя часть - список категорий -->
                <GroupBox Grid.Row="1" Header="Список категорий" Margin="10">
                    <DockPanel>
                        <TextBox x:Name="SearchTextBox" DockPanel.Dock="Top" Margin="0 0 0 10" 
                                 TextChanged="SearchTextBox_TextChanged"/>

                        <DataGrid x:Name="CategoriesDataGrid" 
                                 AutoGenerateColumns="False"
                                 SelectionMode="Single"
                                 SelectionChanged="CategoriesDataGrid_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}" Width="Auto" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Название" Binding="{Binding CategoryName}" Width="*"/>
                                <DataGridTextColumn Header="Цена за ночь" Binding="{Binding PricePerNight}" Width="120"/>
                                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="250"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>
            </Grid>
        </DockPanel>
    </Grid>
</Window>