<Window x:Class="Hotel.Windows.BookingViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Windows"
        xmlns:converters="clr-namespace:Hotel.Converters"
        mc:Ignorable="d"
        Title="Мои бронирования" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FFF0F5FF">
        <!-- Шапка с кнопкой профиля -->
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" 
                       Background="#FF4A6FAE" Height="50">
                <Button Content="Назад" 
                        Width="100" 
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Margin="10 0 0 0"
                        Click="BackButton_Click"/>
                <TextBlock Text="Мои бронирования" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="20 0 0 0"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <StackPanel Margin="20">
                <TextBlock Text="Актуальные бронирования" 
                           FontSize="14"
                           Margin="0 0 0 10"/>
                <TextBlock Text="Здесь вы можете просмотреть все ваши текущие и завершенные бронирования" 
                           Foreground="#555"
                           Margin="0 0 0 20"/>

                <!-- Список бронирований -->
                <ListView Name="BookingsListView" 
                         Background="White"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.View>
                        <GridView>
                            <!-- Скрытые столбцы для ID -->
                            <GridViewColumn Width="0" DisplayMemberBinding="{Binding BookingId}"/>
                            <GridViewColumn Width="0" DisplayMemberBinding="{Binding GuestId}"/>
                            <GridViewColumn Width="0" DisplayMemberBinding="{Binding RoomId}"/>

                            <!-- Номер комнаты -->
                            <GridViewColumn Header="Номер" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Room.RoomNumber}" 
                                                   FontWeight="Bold"
                                                   Foreground="#FF4A6FAE"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Категория номера -->
                            <GridViewColumn Header="Категория" Width="120" 
                                          DisplayMemberBinding="{Binding Room.Category.CategoryName}"/>

                            <!-- Даты бронирования -->
                            <GridViewColumn Header="Даты" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding CheckInDate, StringFormat='Заезд: {0:dd.MM.yyyy}'}"/>
                                            <TextBlock Text="{Binding CheckOutDate, StringFormat='Выезд: {0:dd.MM.yyyy}'}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Гость -->
                            <GridViewColumn Header="Гость" Width="180" 
                                          DisplayMemberBinding="{Binding Guest.FullName}"/>

                            <!-- Статус -->
                            <GridViewColumn Header="Статус" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding Room.Status, Converter={StaticResource StatusToBrushConverter}}"
                                                CornerRadius="3"
                                                Padding="5 2"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Room.Status}" 
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Цена -->
                            <GridViewColumn Header="Цена" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Room.Category.PricePerNight, StringFormat='{}{0:C}'}" 
                                                   Foreground="#FF4A6FAE"
                                                   FontWeight="Bold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="0 0 0 10"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#EEE"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Панель кнопок -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0 20 0 0">
                    <Button Content="Отменить бронь" 
                           Width="120" 
                           Margin="0 0 10 0" 
                           Click="CancelBooking_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"/>

                    <Button Content="Детали" 
                           Width="120" 
                           Margin="0 0 10 0" 
                           Click="DetailsButton_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"/>

                    <Button Content="Оставить отзыв" 
                           Width="120" 
                           Click="AddReviewButton_Click"
                           Background="#FF4A6FAE"
                           Foreground="White"
                           FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>