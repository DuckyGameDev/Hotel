<Window x:Class="Hotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        xmlns:converters="clr-namespace:Hotel.Converters"
        mc:Ignorable="d"
        Title="Гостиница - Бронирование номеров" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FFF0F5FF">
        <!-- Шапка с кнопкой профиля -->
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" 
                        Background="#FF4A6FAE" Height="50">
                <Button Content="Профиль" 
                        Width="100" 
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Margin="10 0 0 0" Click="Button_Click"/>
                <TextBlock Text="Выбирайте лучшее" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="20 0 0 0"/>
                <Button Content="Услуги" 
         Width="100" 
         Background="Transparent" 
         Foreground="White"
         BorderThickness="0"
         FontWeight="Bold"
         Margin="10 0 0 0" Click="ServiceButton_Click"/>
                <Button Content="Спа-услуги" 
Width="100" 
Background="Transparent" 
Foreground="White"
BorderThickness="0"
FontWeight="Bold"
Margin="10 0 0 0" Click="SpaServiceButton_Click"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <StackPanel Margin="20">
                <TextBlock Text="Быстрое бронирование" 
                           FontSize="14"
                           Margin="0 0 0 10"/>
                <TextBlock Text="Всего 2 минуты, без ожидания ответа от администратора" 
                           Foreground="#555"
                           Margin="0 0 0 20"/>

                <!-- Список номеров -->
                <ListView Name="RoomsListView" 
                          Background="White"
                          BorderThickness="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.View>
                        <GridView>
                            <!-- Столбец ID скрыт, но оставлен для привязки данных -->
                            <GridViewColumn Width="0" DisplayMemberBinding="{Binding RoomId}"/>

                            <GridViewColumn Header="Номер" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RoomNumber}" 
                                                   FontWeight="Bold"
                                                   Foreground="#FF4A6FAE"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Категория" Width="150" 
                                            DisplayMemberBinding="{Binding Category.CategoryName}"/>

                            <GridViewColumn Header="Описание" Width="200" 
                                            DisplayMemberBinding="{Binding Category.Description}"/>

                            <GridViewColumn Header="Цена" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Category.PricePerNight, StringFormat='{}{0:C}'}" 
                                                   Foreground="#FF4A6FAE"
                                                   FontWeight="Bold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Статус" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding Status, Converter={StaticResource StatusToBrushConverter}}"
                                                CornerRadius="3"
                                                Padding="5 2"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Status}" 
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="0 0 0 10"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#EEE"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Панель кнопок -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0 20 0 0">
                    <Button Content="Добавить номер" 
                            Width="120" 
                            Margin="0 0 10 0" 
                            Click="AddRoom_Click"
                            Background="#FF4A6FAE"
                            Foreground="White"/>

                    <Button Content="Редактировать" 
                            Width="120" 
                            Margin="0 0 10 0" 
                            Click="EditRoom_Click"
                            Background="#FF4A6FAE"
                            Foreground="White"/>

                    <Button Content="Удалить" 
                            Width="120" 
                            Margin="0 0 10 0" 
                            Click="DeleteRoom_Click"
                            Background="#FF4A6FAE"
                            Foreground="White"/>

                    <Button Content="Бронировать" 
                            Width="120" 
                            Click="BookRoomButton_Click"
                            Background="#FF4A6FAE"
                            Foreground="White"
                            FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>