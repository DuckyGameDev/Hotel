<Window x:Class="Hotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        xmlns:converters="clr-namespace:Hotel.Converters" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Гостиница - Бронирование номеров" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

        <!--xmlns:sys="clr-namespace:System;assembly=netstandard"-->

    <Window.Resources>
        <converters:AddDaysConverter x:Key="AddDaysConverter"/>
    </Window.Resources>

    <Grid Background="#FFF0F5FF">
        <!-- Шапка с кнопкой профиля -->
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" 
                        Background="#FF4A6FAE" Height="50">
                <Button Content="Профиль" 
                        Width="100" 
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Margin="10 0 0 0" Click="Button_Click"/>
                <TextBlock Text="Выбирайте лучшее" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="20 0 0 0"/>
                <Button Content="Спа-процедуры" 
Width="100" 
Background="Transparent" 
Foreground="White"
BorderThickness="0"
FontWeight="Bold"
Margin="10 0 0 0" Click="SpaServiceOrderButton_Click"/>
                <Button x:Name="ServiceBtn"
                    Content="Услуги" 
         Width="100" 
         Background="Transparent" 
         Foreground="White"
         BorderThickness="0"
         FontWeight="Bold"
         Margin="10 0 0 0" Click="ServiceButton_Click"/>
                <Button x:Name="SpaServiseBtn"
                    Content="Спа-услуги" 
Width="100" 
Background="Transparent" 
Foreground="White"
BorderThickness="0"
FontWeight="Bold"
Margin="10 0 0 0" Click="SpaServiceButton_Click"/>
                <Button x:Name="EmployeeMenegement"
                    Content="Сотрудники" 
Width="100" 
Background="Transparent" 
Foreground="White"
BorderThickness="0"
FontWeight="Bold"
Margin="10 0 0 0" Click="EmployeeView_Click"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <StackPanel Margin="20">
                <GroupBox Header="Фильтры">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Дата заезда:" Width="100" VerticalAlignment="Center"/>
                            <DatePicker x:Name="CheckInDatePicker" Width="120" 
                                        SelectedDate="{x:Static sys:DateTime.Today}"
                                        DisplayDateStart="{x:Static sys:DateTime.Today}"/>

                            <TextBlock Text="Дата выезда:" Width="100" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <DatePicker x:Name="CheckOutDatePicker" 
            Width="120"
            SelectedDate="{Binding ElementName=CheckInDatePicker, 
                                 Path=SelectedDate, 
                                 Converter={StaticResource AddDaysConverter}, 
                                 ConverterParameter=1}"
            DisplayDateStart="{Binding ElementName=CheckInDatePicker, 
                                    Path=SelectedDate, 
                                    Converter={StaticResource AddDaysConverter}, 
                                    ConverterParameter=1}"/>
                            <Button Content="Применить фильтры" Margin="10,0,0,0" 
                                   Click="ApplyFilters_Click" Width="150"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Категория:" Width="100" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CategoryComboBox" Width="150" DisplayMemberPath="CategoryName"/>

                            <TextBlock Text="Цена до:" Width="100" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBox x:Name="MaxPriceTextBox" Width="120"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <ListView Name="RoomsListView" 
                         Background="White"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Margin="0,10">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="0" DisplayMemberBinding="{Binding RoomId}"/>
                            <GridViewColumn Header="Номер" Width="100" DisplayMemberBinding="{Binding RoomNumber}"/>
                            <GridViewColumn Header="Категория" Width="150" DisplayMemberBinding="{Binding Category.CategoryName}"/>
                            <GridViewColumn Header="Описание" Width="200" DisplayMemberBinding="{Binding Category.Description}"/>
                            <GridViewColumn Header="Цена" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Category.PricePerNight, StringFormat='{}{0:C}'}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="0 0 0 10"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#EEE"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Панель кнопок -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0 20 0 0">
                    <Button x:Name="AddRoomBtn"
                        Content="Добавить номер" 
                            Width="120" 
                            Margin="0 0 10 0" 
                            Click="AddRoom_Click"
                            Background="#FF4A6FAE"
                            Foreground="White"/>

                    <Button x:Name="EditRoomBtn"
                        Content="Редактировать" 
                            Width="120" 
                            Margin="0 0 10 0" 
                            Click="EditRoom_Click"
                            Background="#FF4A6FAE"
                            Foreground="White"/>

                    <Button x:Name="DeleteRoomBtn"
                        Content="Удалить" 
                            Width="120" 
                            Margin="0 0 10 0" 
                            Click="DeleteRoom_Click"
                            Background="#FF4A6FAE"
                            Foreground="White"/>

                    <Button Content="Бронировать" 
                            Width="120" 
                            Click="BookRoomButton_Click"
                            Background="#FF4A6FAE"
                            Foreground="White"
                            FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>